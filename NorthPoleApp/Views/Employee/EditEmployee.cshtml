@model Employee

<h5>Update Employee Information</h5>

@using (Html.BeginForm("EditEmployee", "Employee", FormMethod.Post))
{
    <div>
        @Html.LabelFor(e => e.FullName)
        @Html.EditorFor(e => e.FullName)
        @Html.ValidationMessageFor(e => e.FullName, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.LabelFor(e => e.Password)
        @Html.TextBoxFor(e => e.Password)
        @Html.ValidationMessageFor(e => e.Password, "", new { @class = "text-danger" })
    </div>
    <input type="hidden" name="Title" value="@Model.Title" />
    <input type="hidden" name="UserName" value="@Model.UserName" />
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <input type="submit" value="Update" />
    </div>
}